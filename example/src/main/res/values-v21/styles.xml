<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="singleAccount">true</item>
        <item name="learningPattern">false</item>
        <item name="rippleBackport">true</item>
        <item name="toolbarElevation">false</item>
    </style>

    <style name="progress_bg" parent="android:Widget.ProgressBar.Horizontal">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ActivityTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ActivityThemeNoBar" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:navigationBarColor">@color/colorPrimary</item>-->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
